@font-face {
  font-family: "Material-Design-Icons";
  src: url(<%= font_path "Material-Design-Icons.eot" %>);
  src: url(<%= font_path "Material-Design-Icons.eot?#iefix" %>) format("embedded-opentype"),
       url(<%= font_path "Material-Design-Icons.woff" %>) format("woff"),
       url(<%= font_path "Material-Design-Icons.ttf" %>) format("truetype"),
       url(<%= font_path "Material-Design-Icons.svg#Material-Design-Icons" %>) format("svg");
  font-weight: normal;
  font-style: normal;
}