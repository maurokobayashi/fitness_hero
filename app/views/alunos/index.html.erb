<style type="text/css">
  .tabs {
    margin-top: 15px;
    margin-bottom: 15px;
  }
  .collection-item i.secondary-content {
    font-size: 1.5rem;
    color: #777;
  }
</style>

<!-- Navbar : begin -->
<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper valign-wrapper">
      <ul class="left">
        <li><a href="index.html"><i class="mdi-navigation-arrow-back"></i></a></li>
      </ul>
      <span class="center-block center-align">
        <span href="#!" class="flow-text valign">Meus alunos</span>
      </span>
      <ul class="right">
        <li><a id="sidenav-toggle" href="#" data-activates="slide-out"><i class="mdi-navigation-menu"></i></a></li>
      </ul>
    </div>
  </nav>
</div>
<!-- Navbar : end -->


<!-- Sidenav : begin -->
<%= render "commons/sidenav" %>
<!-- Sidenav : end -->

<div class="row">
  <div class="col s12 no-padding">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#new">Novos<span class="badge" style="float: none; font-size: .7em; font-weight: 500; position: relative; top: -5px;">(2)</span></a></li>
      <li class="tab col s3"><a href="#actives">Ativos</a></li>
      <li class="tab col s3"><a href="#inactives"> Inativos</a></li>
    </ul>
  </div>

  <!-- Novos : begin -->
  <div id="new" class="col s12 no-padding">
    <div class="row">
      <form>
        <div class="input-field col s12" style="margin-top: 0; padding: 0 30px;">
          <input id="search" placeholder="Buscar" type="text" class="validate" length="25">
          <i class="mdi-action-search prefix" style="float: right; right: 1px; top: 1px; color: #26a69a;"></i>
        </div>
      </form>
      <div class="col s12 no-padding">
        <ul class="collection">
          <% @alunos.select{|a| a.pending?}.each do |aluno| %>
            <a href="<%= edit_aluno_path aluno %>" class="collection-item avatar">
              <img src="<%= aluno.avatar %>" alt="" class="circle">
              <span class="title"><%= aluno.fullname %></span>
              <p style="color: #999; font-size: 1em;"><%= aluno.age %> anos - Iniciante</p>
              <i class="secondary-content mdi-navigation-chevron-right"></i>
            </a>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <!-- Novos : end -->

  <!-- Ativos : begin -->
  <div id="actives" class="col s12 no-padding">
    <div class="row">
      <form>
        <div class="input-field col s12" style="margin-top: 0; padding: 0 30px;">
          <input id="search" placeholder="Buscar" type="text" class="validate" length="25">
          <i class="mdi-action-search prefix" style="float: right; right: 1px; top: 1px; color: #26a69a;"></i>
        </div>
      </form>
      <div class="col s12 no-padding">
        <ul class="collection">
          <% @alunos.select{|a| a.active?}.each do |aluno| %>
            <a href="<%= edit_aluno_path aluno %>" class="collection-item avatar">
              <img src="<%= aluno.avatar %>" alt="" class="circle">
              <span class="title"><%= aluno.fullname %></span>
              <p style="color: #999; font-size: 1em;"><%= aluno.age %> anos - Iniciante</p>
              <i class="secondary-content mdi-navigation-chevron-right"></i>
            </a>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <!-- Ativos : end -->

  <!-- Inativos : begin -->
  <div id="inactives" class="col s12 no-padding">
    <div class="row">
      <form>
        <div class="input-field col s12" style="margin-top: 0; padding: 0 30px;">
          <input id="search" placeholder="Buscar" type="text" class="validate" length="25">
          <i class="mdi-action-search prefix" style="float: right; right: 1px; top: 1px; color: #26a69a;"></i>
        </div>
      </form>
      <div class="col s12 no-padding">
        <ul class="collection">
          <% @alunos.select{|a| a.inactive?}.each do |aluno| %>
            <a href="<%= edit_aluno_path aluno %>" class="collection-item avatar">
              <img src="<%= aluno.avatar %>" alt="" class="circle">
              <span class="title"><%= aluno.fullname %></span>
              <p style="color: #999; font-size: 1em;"><%= aluno.age %> anos - Iniciante</p>
              <i class="secondary-content mdi-navigation-chevron-right"></i>
            </a>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <!-- Inativos : end -->

  <div class="row">
    <div class="col s12">
      <%= link_to "Adicionar aluno", new_aluno_path, class: "waves-effect waves-light btn block" %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).on('page:load', function(){
    // Initialize collapse button
    $('#sidenav-toggle').sideNav({
        menuWidth: 300, // Default is 240
        edge: 'right', // Choose the horizontal origin
        closeOnClick: true // Closes side-nav on <a> clicks, useful for Angular/Meteor
      }
    );
  });
</script>